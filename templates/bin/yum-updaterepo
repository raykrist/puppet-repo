#!/bin/bash -ue
set -e

## Sanity check
if [ $# -ne 2 ]; then
  echo "I need two input parameters:"
  echo "  yum-updaterepo <incomingdir> <filename>"
  exit 1
fi

incoming=$1
file=$2

# Set params
name=$(echo $incoming | awk -F '/' '{ print $(NF-1) }')
releasever="${incoming##*/}"
base="${incoming%/*/*/*}"
repo="$base/pub/$name"

# Debug info
#echo $name
#echo $base
#echo $repo
#echo $releasever

# Copy .rpm 
/bin/su -c "cp "${incoming}/${file}" "${repo}/${releasever}"" <%= scope.lookupvar("repo::user") %>

# Update repo
/bin/su -c "/usr/bin/createrepo --update --database --cachedir "${repo}/${releasever}"/cache "${repo}/${releasever}"" <%= scope.lookupvar("repo::user") %>

# Generate HTML index
/bin/su -c "/usr/bin/repoview -q "${repo}/${releasever}"" <%= scope.lookupvar("repo::user") %>

rm "$incoming/$file"

